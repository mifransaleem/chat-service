{
  "name": "chat-service",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.6.7",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.2",
    "jsonwebtoken": "^9.0.1",
    "nodemon": "^3.0.2",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.5",
    "typeorm": "^0.3.17",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/jwk-to-pem": "^2.0.3",
    "@types/node": "^18.19.8",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.2",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "scripts": {
    "dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node --files src/app.ts",
    "dev:win": "nodemon --watch src -e ts,tsx --exec ts-node --files src/app.ts",
    "clean": "rm -rf dist",
    "build": "tsc",
    "start": "node dist/app.js",
    "gen-tables": "ts-node src/loaders/createTables.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:show": "npm run typeorm migration:show --  -d ./src/data-source.ts",
    "migration:revert": "npm run typeorm migration:revert --  -d ./src/data-source.ts",
    "migration:run": "npm run typeorm migration:run --  -d ./src/data-source.ts",
    "migration:generate": "npm run typeorm migration:generate -- -d ./src/data-source.ts ./src/migrations/",
    "schema:drop": "npm run typeorm schema:drop --  -d ./src/data-source.ts"
  }
}
